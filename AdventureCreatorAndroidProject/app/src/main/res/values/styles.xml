<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBG</item>
        <item name="colorAccentCustom">@color/colorPrimary</item>
        <item name="colorPrimaryCustom">@color/colorPrimary</item>
    </style>

    <style name="HorrorTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/horrorBG</item>
        <item name="colorPrimary">@color/horrorPrimary</item>
        <item name="colorPrimaryDark">@color/horrorPrimaryDark</item>
        <item name="colorAccent">@color/horrorAccent</item>
        <item name="colorAccentCustom">@color/horrorPrimary</item>
        <item name="colorPrimaryCustom">@color/horrorPrimary</item>
    </style>

    <style name="SciFiTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/scifiBG</item>
        <item name="colorPrimary">@color/sciFiPrimary</item>
        <item name="colorPrimaryDark">@color/sciFiPrimaryDark</item>
        <item name="colorAccent">@color/sciFiAccent</item>
        <item name="colorAccentCustom">@color/sciFiPrimary</item>
        <item name="colorPrimaryCustom">@color/sciFiPrimary</item>
    </style>

    <style name="FantasyTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/fantasyBG</item>
        <item name="colorPrimary">@color/fantasyPrimary</item>
        <item name="colorPrimaryDark">@color/fantasyPrimaryDark</item>
        <item name="colorAccent">@color/fantasyAccent</item>
        <item name="colorAccentCustom">@color/fantasyPrimary</item>
        <item name="colorPrimaryCustom">@color/fantasyPrimary</item>
    </style>

    <style name="CustomDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>
    </style>
</resources>
